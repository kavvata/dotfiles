# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
separator_block_width=10
markup=none
#
# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
[wifiname]
color=#00FF00
command=iwgetid -r
interval=1


# Volume indicator
[volume]
command=~/.config/i3blocks/blocklets/volume-pipewire/volume-pipewire
interval=once
signal=1
LONG_FORMAT="${SYMB}${VOL}% "
SHORT_FORMAT="${SYMB}${VOL}% "

# Battery indicators
[battery]
label=BAT0:
instance=0
command=upower -i /org/freedesktop/UPower/devices/battery_BAT0 | grep percentage | grep -E "[0-9]*%" -o
interval=30
separator=false

[battery]
label=BAT1:
instance=2
command=upower -i /org/freedesktop/UPower/devices/battery_BAT1 | grep percentage | grep -E "[0-9]*%" -o
interval=30
separator=false

[batterystate]
command=upower -i /org/freedesktop/UPower/devices/battery_BAT0 | grep state | cut -c 26-
interval=5

# Key indicators
#
# Add the following bindings to i3 config file:
#
# bindsym --release Caps_Lock exec pkill -SIGRTMIN+11 i3blocks
# bindsym --release Num_Lock  exec pkill -SIGRTMIN+11 i3blocks
#[keyindicator]
#instance=CAPS
#interval=once
#signal=11

#[keyindicator]
#instance=NUM
#interval=once
#signal=11

# Date Time
#
[time]
command=date '+%a %d.%m.%Y %H:%M'
interval=10
separator=false
separator_block_width=0

[seconds]
command=date +:%S
interval=1
color=#999999
min_width=:300
